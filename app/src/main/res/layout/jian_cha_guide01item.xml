<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/border_45"
    android:background="@color/white"
    android:layout_marginBottom="1dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/border_5">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/border_10"
        android:layout_weight="1"
        android:text="安全（土建）"
        android:textColor="@color/blue"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/border_22"
        android:layout_height="@dimen/border_25"
        android:layout_gravity="right|center"
        android:layout_marginRight="@dimen/border_10"
        android:scaleType="centerInside"
        android:src="@drawable/arrow_down_gray" />
</LinearLayout>