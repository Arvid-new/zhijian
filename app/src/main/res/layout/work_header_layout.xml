<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/border_15"
        android:padding="@dimen/border_5">

        <View
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:background="@drawable/blue_vertical_line_shape" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/border_8"
            android:gravity="center"
            android:text="工作台"
            android:textColor="@color/black_3"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />
    </LinearLayout>

    <com.haozhiyan.zhijian.view.MyRecycleView
        android:id="@+id/rv_workList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/border_10"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/border_5"
        android:layout_marginLeft="@dimen/border_15"
        android:layout_marginRight="@dimen/border_15"
        android:layout_marginTop="@dimen/border_10"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/border_15"
        android:orientation="horizontal"
        android:padding="@dimen/border_5">

        <View
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:background="@drawable/blue_vertical_line_shape" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/border_8"
            android:gravity="center"
            android:text="公告"
            android:textColor="@color/black_3"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>