<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_flooer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_45"
            android:background="@color/gray_back"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/sp15"
            android:text="1å±‚"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp16" />
<!--android:stretchMode="columnWidth"-->
        <com.haozhiyan.zhijian.view.MyGridView
            android:id="@+id/mgv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:horizontalSpacing="@dimen/border_15"
            android:numColumns="3"
            android:padding="@dimen/border_8"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/border_15" />

        <View
            android:id="@+id/view_footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_60"
            android:background="@color/gray_back"
            android:gravity="center_vertical"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>