<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/border_8">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imgView"
        android:layout_width="@dimen/border_80"
        android:layout_height="@dimen/border_80"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        fresco:placeholderImage="@drawable/icon_no_img"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/border_8"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:padding="@dimen/border_2"
            android:text="测试测试"
            android:textColor="@color/black_3"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:padding="@dimen/border_2"
            android:text="测试测试"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/border_2"
            android:text="05-05 11:02"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp14" />
    </LinearLayout>
</LinearLayout>