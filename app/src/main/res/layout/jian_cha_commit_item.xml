<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/border_1"
    android:background="@color/white_"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/border_8">

    <!--<com.facebook.drawee.view.SimpleDraweeView-->
    <!--android:id="@+id/imgView"-->
    <!--android:layout_width="@dimen/border_80"-->
    <!--android:layout_height="@dimen/border_80"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:scaleType="centerCrop"-->
    <!--fresco:placeholderImage="@drawable/icon_no_img"-->
    <!--fresco:placeholderImageScaleType="centerCrop"-->
    <!--fresco:roundAsCircle="false" />-->
    <ImageView
        android:id="@+id/imgView"
        android:layout_width="@dimen/border_80"
        android:layout_height="@dimen/border_80"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/border_8"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="@dimen/border_18"
                android:layout_height="@dimen/border_18"
                android:layout_marginRight="5dp"
                android:background="@drawable/red_back_shape"
                android:gravity="center"
                android:text="急"
                android:textColor="@color/white"
                android:textSize="@dimen/sp13"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="@dimen/border_18"
                android:layout_height="@dimen/border_18"
                android:layout_marginRight="5dp"
                android:background="@drawable/red_back_shape"
                android:gravity="center"
                android:text="退"
                android:textColor="@color/white"
                android:textSize="@dimen/sp13"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/border_2"
                android:ellipsize="end"
                android:padding="@dimen/border_2"
                android:singleLine="true"
                android:textColor="@color/black_3"
                android:textSize="@dimen/sp15"
                tools:text="测试测试" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:padding="@dimen/border_2"
                android:singleLine="true"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/sp14"
                tools:text="测试测试" />

            <TextView
                android:id="@+id/tvJCStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/border_8"
                android:textColor="@color/red2"
                android:textSize="@dimen/sp14"
                tools:text="待整改" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/border_2"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp14"
            tools:text="05-05 11:02" />
    </LinearLayout>
</LinearLayout>