<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.workXcjc.JianChaGuideDetail">

    <include layout="@layout/app_white_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_back2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border_20"
            android:layout_marginTop="@dimen/border_8"
            android:padding="@dimen/border_6"
            android:text="检查指引无标题"
            android:textColor="@color/black_3"
            android:textSize="@dimen/sp17"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_1"
            android:background="@color/gray" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/border_10"
            android:scrollbars="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/border_10"
                android:paddingTop="@dimen/border_10"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/border_15"
                    android:padding="@dimen/border_10"
                    android:text="检查指引无内容"
                    android:textColor="@color/black_3"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>