<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_back"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/home_forms_item_yellow_back"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_type_icon"
            android:layout_width="@dimen/border_40"
            android:layout_height="@dimen/border_40"
            android:layout_marginBottom="@dimen/border_8"
            android:layout_marginLeft="@dimen/border_20"
            android:scaleType="centerInside"
            android:src="@drawable/forms_item_xcjc_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/border_8"
            android:layout_marginLeft="@dimen/border_8"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_do_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现场检查"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/tv_do_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/border_5"
                android:text="本月新增0个问题，已整改0个"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>