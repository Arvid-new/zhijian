<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/border_100"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="@dimen/border_80"
        android:layout_height="@dimen/border_80"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/border_10"
        android:scaleType="centerCrop"
        android:background="@color/chuck_status_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_picture"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_chao"
                android:layout_width="@dimen/border_18"
                android:layout_height="@dimen/border_18"
                android:src="@mipmap/chaoicon"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_ji"
                android:layout_width="@dimen/border_18"
                android:layout_height="@dimen/border_18"
                android:layout_marginLeft="@dimen/border_5"
                android:background="@drawable/red_back_shape"
                android:gravity="center"
                android:text="急"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_tui"
                android:layout_width="@dimen/border_18"
                android:layout_height="@dimen/border_18"
                android:layout_marginLeft="@dimen/border_5"
                android:src="@mipmap/tuiicon"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/border_5"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="安全(安装)"
                android:textColor="@color/black2"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border_15"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="施工电梯卸料口安全"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border_15"
            android:text="2019-7-19"
            android:textColor="@color/text_color"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/border_20"
        android:text="待整改"
        android:textColor="@color/red" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_1"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/border_10"
        android:background="@color/gray_back" />
</RelativeLayout>

