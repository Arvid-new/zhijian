<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_list_window2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/ll_four"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <ListView
            android:id="@+id/lv01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:divider="@color/translate"
            android:scrollbars="vertical" />

        <ListView
            android:id="@+id/lv02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:divider="@color/translate"
            android:scrollbars="vertical" />

        <ListView
            android:id="@+id/lv03"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:divider="@color/translate"
            android:scrollbars="vertical"
            android:visibility="visible" />

        <ListView
            android:id="@+id/lv04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:divider="@color/translate"
            android:scrollbars="vertical"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/border_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/border_20"
                android:layout_weight="10" />

            <TextView
                android:layout_width="@dimen/border_60"
                android:layout_height="@dimen/border_25"
                android:layout_marginLeft="@dimen/border_8"
                android:background="@drawable/gray_shape2"
                android:visibility="invisible"
                android:gravity="center"
                android:text="合格率"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp13" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/border_20"
                android:layout_weight="1" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/scsl_jcxList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/border_5"
            android:layout_marginLeft="@dimen/border_5"
            android:layout_marginRight="@dimen/border_10" />
    </LinearLayout>
</RelativeLayout>