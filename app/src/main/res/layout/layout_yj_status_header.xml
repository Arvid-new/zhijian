<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_yj_header"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_back"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/border_10">

        <View
            android:id="@+id/view_line"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/yellow" />

        <TextView
            android:id="@+id/tv_yjStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="待验收"
            android:textColor="@color/black2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/border_10"
            android:layout_marginBottom="10dp"
            android:layout_weight="5"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_state01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/red2"
                android:padding="@dimen/border_2"
                android:text="严重"
                android:textColor="@color/white"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_state02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/yellow"
                android:padding="@dimen/border_2"
                android:text="退回"
                android:textColor="@color/white_"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>