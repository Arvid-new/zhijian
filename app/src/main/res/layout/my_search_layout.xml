<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/border_35"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/border_15"
                android:background="@drawable/gray_shape"
                android:gravity="center"
                android:hint="@string/searchStr"
                android:textColor="@color/black_3"
                android:textColorHint="@color/text_color"
                android:textSize="@dimen/sp14" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="@dimen/border_20"
                android:layout_height="@dimen/border_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_search" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_search_function"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/border_10"
            android:text="取消"
            android:textColor="@color/black_3"
            android:textSize="@dimen/sp15"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>