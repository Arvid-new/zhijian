<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="建设单位验收人"
            android:textColor="@color/text_color_a0"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5">

            <TextView
                android:id="@+id/acceptanceNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black2"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/isQualifiedTV"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:textColor="@color/c6_color"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/acceptanceTalkImg"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/acceptanceNameTV"
                android:background="@drawable/img_blue_message"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/acceptanceDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acceptanceNameTV"
                android:layout_alignLeft="@+id/acceptanceNameTV"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color_b6"
                android:textSize="15sp" />

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/acceptanceImageLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="验收照片"
            android:textColor="@color/text_color_a0"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/acceptanceSupplementTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="@color/text_color_68"
                android:textSize="15sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/acceptanceImageRCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>