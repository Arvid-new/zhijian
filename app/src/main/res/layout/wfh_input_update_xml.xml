<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/ll_dialog_back"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/exit_dialog_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="修改信息"
            android:textColor="@color/text_color2"
            android:textSize="17sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_1"
            android:background="@color/gray_back"/>

        <EditText
            android:id="@+id/et_update_Content"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/border_15"
            android:textSize="@dimen/sp16"
            android:textColor="@color/black_3"
            android:hint="输入修改内容"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:background="@drawable/gray_border_shape"
            android:paddingLeft="@dimen/border_10" />

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xk_dialog_btn_gray_shape"
                android:gravity="center"
                android:padding="8dp"
                android:text="取消"
                android:textColor="@color/black_3"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xk_dialog_btn_yellow_shape"
                android:gravity="center"
                android:padding="8dp"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="16.0sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>