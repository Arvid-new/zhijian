<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/border_10"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/border_20"
        android:layout_height="@dimen/border_20"
        android:layout_gravity="right|center"
        android:scaleType="centerInside"
        android:src="@mipmap/arrow_r" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/border_5"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/border_40"
        android:layout_height="@dimen/border_40"
        android:visibility="invisible"
        android:layout_marginRight="@dimen/border_10"
        android:src="@mipmap/head_img" />
</LinearLayout>