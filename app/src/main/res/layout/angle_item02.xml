<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_55"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/border_20">

        <CheckBox
            android:id="@+id/cb_check"
            android:layout_width="@dimen/border_20"
            android:layout_height="@dimen/border_20"
            android:background="@drawable/cb_selector"
            android:button="@null" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/angleView"
            android:layout_width="@dimen/border_50"
            android:layout_height="@dimen/border_50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:background="@drawable/img_normal_header"
            android:scaleType="centerCrop"
            fresco:roundAsCircle="true"
            fresco:roundedCornerRadius="30dp"
            fresco:roundingBorderColor="@color/white"
            fresco:roundingBorderWidth="1.0dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border_5"
            android:layout_weight="3"
            android:text="【施工单位】王五"
            android:textColor="@color/black_3"
            android:textSize="@dimen/sp15" />
    </LinearLayout>

    <View style="@style/line" />
</LinearLayout>