<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dikuai"
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_40"
        android:background="@color/gray_back"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/border_20"
        android:text="测试-标段" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_tower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/border_60" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_1"
        android:layout_marginLeft="@dimen/border_20"
        android:background="@color/gray_back" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/border_60" />
</LinearLayout>