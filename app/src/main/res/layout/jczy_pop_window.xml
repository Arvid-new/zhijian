<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llWindow"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llWindowChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/border_8">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/border_3"
            android:text="抹灰工程-平整度"
            android:textColor="@color/black_3"
            android:textSize="@dimen/sp17" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/border_8"
            android:layout_marginBottom="@dimen/border_8"
            android:background="@color/gray_back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/border_3"
            android:text="[0,4]mm；填写测试值；"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/border_6"
            android:lineSpacingExtra="6dp"
            android:padding="@dimen/border_3"
            android:text="当墙面长度小于安徽的骄傲的当墙面长度小于安徽的骄傲的当墙面长度小于安徽当墙面长度小于安徽的骄傲的墙"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/sp15" />
    </LinearLayout>
</RelativeLayout>